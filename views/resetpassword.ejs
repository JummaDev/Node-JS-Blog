<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/resetpassword.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Programming Blog | Code Mentor Guide</title>
</head>

<body>
    <!-- header's html starts below -->
    <%- include('layouts/header'); -%>
    <!-- header html ends here -->
    

    <!-- main html starts here -->
    <main class="resetpassword-page-main">
        <% if(typeof passconfirmfail != 'undefined') { %>
        <div class="pass-fail-message"><%= passconfirmfail %></div>
        <% } %>

        <% if(typeof passresetsuccess != 'undefined') { %>
        <div class="pass-success-message"><%= passresetsuccess %></div>
        <% } %>

        <% if(typeof emptyerror != 'undefined') { %>
        <div class="pass-error-message"><%= emptyerror %></div>
        <% } %>

        <% if(typeof minpass != 'undefined') { %>
        <div class="pass-error-message"><%= minpass %></div>
        <% } %>

        <div class="resetpassword-container">
            <form action="" method="post" id="resetpassword-form" autocomplete="off">
                    <h4>Type New Password:</h4>
                    <h5>Password:</h5>
                    <input type="password" name="password" id="password" />
                    <h5>Confirm Password:</h5>
                    <input type="password" name="confirmpassword" id="password" /><br><br>
                    <input type="submit" value="Reset password" id="resetpasswordBtn" />
            </form>
        </div>
    </main>
    <!-- main html ends here -->

    <hr class="footer-hr">

    <!-- footer html starts here -->
    <%- include('layouts/footer'); -%>
    <!-- footer html ends here -->

    <script src="js/blog.js"></script>
    <script src="js/index.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</body>

</html>