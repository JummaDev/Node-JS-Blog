<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/forgotpassword.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Programming Blog | Code Mentor Guide</title>
</head>

<body>
    <!-- header's html starts below -->
    <%- include('layouts/header'); -%>
    <!-- header html ends here -->


    <!-- main html starts here -->
    <main class="forgotpassword-page-main">
        <% if(emailsendsuccess.length > 0) { %>
        <h4 class="email-send-success-message"><%= emailsendsuccess %></h4>
        <% } %>

        <% if(emailsendfail.length > 0) { %>
        <h4 class="email-send-fail-message"><%= emailsendfail %></h4>
        <% } %>

        <div class="forgotpassword-container">
            <form action="/auth/signin/forgot-password/check-email" method="post" autocomplete="off" id="forgotpassword-form">
                    <h3>Reset Password:</h3>
                    <h5>Email:</h5>
                    <input type="email" name="useremail" id="email"><br><br>
                    <input type="submit" value="Send Email" id="forgotpassBtn">
            </form>
        </div>
    </main>
    <!-- main html ends here -->

    <hr class="footer-hr">

    <!-- footer html starts here -->
    <%- include('layouts/footer'); -%>
    <!-- footer html ends here -->

    <script src="js/blog.js"></script>
    <script src="js/index.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</body>

</html>